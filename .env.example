# =============================================================================
# Google Marketing Hub MCP - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Cloudflare Workers, use: wrangler secret put <VARIABLE_NAME>
# =============================================================================

# -----------------------------------------------------------------------------
# Google OAuth 2.0 Credentials
# -----------------------------------------------------------------------------
# Create at: https://console.cloud.google.com/apis/credentials
# Type: OAuth 2.0 Client ID (Web Application)
# Authorized redirect URIs: 
#   - https://google-marketing-hub-mcp.<subdomain>.workers.dev/oauth/callback
#   - http://localhost:8787/oauth/callback (for local dev)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# -----------------------------------------------------------------------------
# Required Google API Scopes (configure in OAuth consent screen)
# -----------------------------------------------------------------------------
# Google Ads API:
#   - https://www.googleapis.com/auth/adwords
# Google Tag Manager API:
#   - https://www.googleapis.com/auth/tagmanager.readonly
#   - https://www.googleapis.com/auth/tagmanager.edit.containers
#   - https://www.googleapis.com/auth/tagmanager.edit.containerversions
#   - https://www.googleapis.com/auth/tagmanager.publish
# Google Analytics 4 API:
#   - https://www.googleapis.com/auth/analytics.readonly
#   - https://www.googleapis.com/auth/analytics.edit
# Google Cloud Platform:
#   - https://www.googleapis.com/auth/cloud-platform.read-only
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Cloudflare Workers Configuration (set via wrangler.toml [vars])
# -----------------------------------------------------------------------------
ENVIRONMENT=development
MCP_SERVER_NAME=google-marketing-hub-mcp
MCP_SERVER_VERSION=0.1.0

# -----------------------------------------------------------------------------
# D1 Database (created via wrangler d1 create ghub-tokens)
# -----------------------------------------------------------------------------
# After creation, add database_id to wrangler.toml
# D1_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# -----------------------------------------------------------------------------
# KV Namespace (created via wrangler kv:namespace create sessions)
# -----------------------------------------------------------------------------
# After creation, add id to wrangler.toml
# KV_NAMESPACE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# Optional: Custom Domain (if not using workers.dev)
# -----------------------------------------------------------------------------
# MCP_CUSTOM_DOMAIN=mcp.yourdomain.com

# -----------------------------------------------------------------------------
# Local Development Only
# -----------------------------------------------------------------------------
# These are only used when running locally with wrangler dev
LOCAL_DEV_PORT=8787
